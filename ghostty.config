# A Ghostty Config for a Mac user who was used to iTerm2

# Shell
shell-integration = fish
shell-integration-features = cursor,sudo,title,ssh-env,ssh-terminfo
command = /opt/homebrew/bin/fish

# Font
font-family = "FiraCode Nerd Font"
font-size = 12
font-feature = -liga
font-style = "Regular"
font-style-bold = false
font-style-italic = false
font-style-bold-italic = false

# Theme
theme = TokyoNight

# Window
window-decoration = true
window-padding-x = 5
window-padding-y = 5
window-padding-balance = true
window-width = 120
window-height = 39
macos-non-native-fullscreen = true
window-theme = auto

# Scrollback
scrollback-limit = 9000

# Mouse
mouse-hide-while-typing = true
copy-on-select = clipboard

# Behavior
confirm-close-surface = false
quit-after-last-window-closed = false

# Keybindings
# Note: Ghostty uses different syntax for keybinds
keybind = cmd+enter=toggle_fullscreen
keybind = cmd+d=new_split:right
keybind = cmd+shift+d=new_split:down
keybind = shift+page_up=scroll_page_up
keybind = shift+page_down=scroll_page_down

# iterm2 navigation
keybind = cmd+shift+left_bracket=previous_tab
keybind = cmd+shift+right_bracket=next_tab

keybind = cmd+d=new_split:right
keybind = cmd+shift+d=new_split:down
keybind = cmd+opt+left=goto_split:left
keybind = cmd+opt+right=goto_split:right
keybind = cmd+opt+up=goto_split:top
keybind = cmd+opt+down=goto_split:bottom

keybind = cmd+k=clear_screen


# Default behavior notes
#   Ghostty requires cmd click for links by default with mouse-click-to-open-url
#   Ghostty shows tabs when there are multiple, hides when single (default behavior)
#   Audio bell disabled by default in Ghostty



# Quick terminal toggle - needs Settings > Privacy > Accessibility > Ghostty ON
keybind = global:ctrl+shift+grave_accent=toggle_quick_terminal

# Quick terminal settings
quick-terminal-position = left
quick-terminal-size = 40%
quick-terminal-autohide = true
quick-terminal-screen = main
quick-terminal-animation-duration = 0
